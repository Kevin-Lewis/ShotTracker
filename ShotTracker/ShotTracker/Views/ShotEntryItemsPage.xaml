<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:ShotTracker.ViewModels"
             xmlns:models="clr-namespace:ShotTracker.Models"
             x:Class="ShotTracker.Views.ShotEntryItemsPage"
             Title="{Binding Title}"
             x:Name="BrowseItemsPage"
             x:DataType="viewmodels:ShotEntryItemsViewModel"
             >

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <DatePicker HorizontalOptions="CenterAndExpand" WidthRequest="100"></DatePicker>
        <ListView ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:ShotEntryItem">
                    <TextCell Text="{Binding TextResult}" Detail="{Binding Date}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
</ContentPage>
